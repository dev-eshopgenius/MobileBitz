<div
  class="customizer-imagewith-text-section {{ section.settings.classname }}"
 
>
  <div class="image-with-text-wrapper page-width"  style="background:{{ section.settings.bg_clr }}">
    {% if section.settings.secheading != blank %}
      <div class="secheading">
        <h2>{{ section.settings.secheading }}</h2>
      </div>
    {% endif %}
    <div class="customizer--iwt-wrapper">
      <div class="section-block-wrapp">
        <div class="content-block-wrapper">
          {% for block in section.blocks %}
            {% if block.type == 'add_content' %}
              {% if block.settings.heading != blank or block.settings.content != blank %}
                <div class="content-block">
                  {% if block.settings.heading != blank %}
                    <div class="heading">
                      <h3>{{ block.settings.heading }}</h3>
                    </div>
                  {% endif %}
                  {% if block.settings.content != blank %}
                    <div class="subheading">{{ block.settings.content }}</div>
                  {% endif %}
                </div>
              {% endif %}
            {% endif %}
          {% endfor %}
        </div>
        <div class="icon-block-wrapper">
          {% for block in section.blocks %}
            {% if block.type == 'add_icon' %}
              {% for i in (1..3) %}
                {% capture icon %}icon{{ i }}{% endcapture %}
                {% capture text %}text{{ i }}{% endcapture %}
                {% if block.settings[icon] != blank or block.settings[text] != blank %}
                  <div class="icon-block">
                    {% if block.settings[icon] != blank %}
                      <div class="icon">
                        {{ block.settings[icon] | image_url: width: 50 | image_tag: loading: 'lazy', class: 'icon' }}
                      </div>
                    {% endif %}
                    {% if block.settings[text] != blank %}
                      <div class="text">{{ block.settings[text] }}</div>
                    {% endif %}
                  </div>
                {% endif %}
              {% endfor %}
            {% endif %}
          {% endfor %}
        </div>
      </div>
      {% if section.settings.banner_img != blank %}
        <div class="image--wrapp">
          {{ section.settings.banner_img | image_url: width: 1024 | image_tag: loading: 'lazy', class: 'banner_img' }}
        </div>
      {% endif %}
    </div>
  </div>
</div>
{% schema %}
{
  "name": "Customizer IWT",
  "settings": [
    {
  "type": "select",
  "id": "classname",
  "label": "Unique ClassName",
  "options": [
    {
      "value": "cust-iwt-design1",
      "label": "Design 1"
    },
    {
      "value": "cust-iwt-design2",
      "label": "Design 2"
    }
  ]
},
 {
      "type": "color",
      "id": "bg_clr",
      "label": "Background Color"
    },
     {
      "type": "text",
      "id": "secheading",
      "label": "Section Heading",
    },
  {
    "type": "image_picker",
    "id": "banner_img",
    "label": "Image"
  }
  ],
  "blocks": [
    {
      "type": "add_content",
      "name":"Add Content",
      "settings": [
        {
          "type": "text",
          "id":"heading",
          "label": "Heading"
        },
        {
          "type": "textarea",
          "id": "content",
          "label": "Content"
        }
      ]
    },
    {
      "type": "add_icon",
      "name":"Add Icon",
      "settings": [
        {
          "type": "image_picker",
          "id":"icon1",
          "label": "Icon [1]"
        },
        {
          "type": "text",
          "id": "text1",
          "label": "Text [1]"
        },
        {
          "type": "image_picker",
          "id":"icon2",
          "label": "Icon [2]"
        },
        {
          "type": "text",
          "id": "text2",
          "label": "Text [2]"
        },
        {
          "type": "image_picker",
          "id":"icon3",
          "label": "Icon [3]"
        },
        {
          "type": "text",
          "id": "text3",
          "label": "Text [3]"
        }
      ]
    }
  ],
  "presets": [{
    "name": "Customizer IWT"
  }]
}
{% endschema %}
